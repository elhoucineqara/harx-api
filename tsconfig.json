{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.js",
    "src/routes/auth-*.ts",
    "src/routes/ai-gigs-generate.ts",
    "src/routes/ai-messages-batch.ts",
    "src/routes/ai-profile-summary.ts",
    "src/routes/ai-speech-to-text-transcribe.ts",
    "src/routes/ai-vertex-*.ts",
    "src/routes/calls-*.ts",
    "src/routes/companies-id*.ts",
    "src/routes/companies-user-*.ts",
    "src/routes/cv-*.ts",
    "src/routes/dashboard-*.ts",
    "src/routes/documents-id.ts",
    "src/routes/files-*.ts",
    "src/routes/gigs-id.ts",
    "src/routes/leads-id*.ts",
    "src/routes/matching-*.ts",
    "src/routes/onboarding-*.ts",
    "src/routes/profiles-*.ts",
    "src/routes/zoho-*.ts",
    "src/repositories/MongoCompanyRepository.ts",
    "src/utils/matchingAlgorithm.ts",
    "src/utils/matchingUtils.ts",
    "src/utils/relationshipSync.ts",
    "src/services/zoho.service.ts",
    "src/services/vertexService.ts",
    "src/services/vertex.ts",
    "src/routes/zoho.ts",
    "src/routes/vertex.ts",
    "src/routes/speech-to-text.ts",
    "src/routes/ipRoutes.ts",
    "src/services/speech-to-text.ts",
    "src/controllers/ZohoController.ts"
  ]
}

